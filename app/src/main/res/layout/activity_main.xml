<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@tools:sample/avatars" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Resultado"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/LinearLayout_values"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/LinearLayout_dec"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/black_dec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000000"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/brown_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7A4E28"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/red_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F30D0D"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/orange_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F45B08"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/yellow_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EFC02D"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/green_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#08B61A"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/purple_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#8F13DC"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/gray_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#686666"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/white_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#D8D2D2"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_units"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/black_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000000"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/brown_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7A4E28"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/red_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F30D0D"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/orange_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F45B08"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/yellow_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EFC02D"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/green_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#08B61A"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/purple_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#8F13DC"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/gray_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#686666"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/white_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#D8D2D2"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_mult"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/black_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000000"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/brown_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7A4E28"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/red_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F30D0D"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/orange_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F45B08"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/yellow_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EFC02D"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/green_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#08B61A"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/purple_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#8F13DC"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/gray_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#686666"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/white_mult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#D8D2D2"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout_tol"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/red_tol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FF0000"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/gold_tol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#858827"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/silver_tol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#919090"
                        android:text="@string/empty"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>